<h1><%=h @location.name %></h1>

<p>
   Ships:
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Cargo Space</th>
  </tr>

<% for ship in @location.ships %>
  <tr>
    <td><%= link_to ship.name, ship %></td>
    <td><%=h ship.max_cargo_space %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
